<h1>日本酒一覧ページ</h1>

<!-- 検索フォーム -->
<div class="search-container">
  <%= form_with url: sakes_path, method: :get, local: true, class: "search-form" do %>
    <%= text_field_tag :q, params[:q], placeholder: "日本酒名や甘口・辛口で検索", class: "search-input" %>
    <%= submit_tag "検索", class: "search-button" %>
  <% end %>
</div>

<div class="sake-cards-wrapper">
  <!-- 全カード共通の右上並び替えリンク -->
  <div class="sort-links">
    <%= link_to "人気順", sakes_path(sort: "popular", q: params[:q]), class: "sort-link" %>
    <%= link_to "新着順", sakes_path(sort: "new", q: params[:q]), class: "sort-link" %>
    <%= link_to "おすすめ順", sakes_path(sort: "recommended", q: params[:q]), class: "sort-link" %>
  </div>

  <!-- 日本酒カード -->
  <% if @sakes.present? %>
    <div class="sake-cards">
      <%= render partial: "sakes/sake_card", collection: @sakes, as: :sake %>
    </div>
  <% else %>
    <p>まだ日本酒が登録されていません。</p>
  <% end %>
</div> <!-- /.sake-cards-wrapper -->

<!-- 戻るボタン -->
<div class="back-btn">
  <%= link_to '戻る', 'javascript:history.back()', class: 'btn btn-secondary' %>
</div>
