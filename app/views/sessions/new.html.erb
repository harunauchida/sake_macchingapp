<h1>ログイン</h1>

<%= form_with url: login_path, local: true do |f| %>
  <div>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.submit "ログイン", class: "btn btn-login" %>
  </div>
<% end %>

<div class="form-actions">
  <%= link_to "戻る", root_path, class: "btn btn-secondary" %>
</div>
