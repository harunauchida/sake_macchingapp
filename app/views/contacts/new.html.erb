<div class="contact-form-container">
    <h1>お問い合わせ</h1>

    <%= form_with model: @contact, url: contact_path, local: true, class: "contact-form" do |f| %>
        <% if flash[:alert] %>
            <div class="alert alert-danger"><%= flash[:alert] %></div>
        <% end %>

    <div class="form-group">
        <%= f.label :name, "お名前" %>
        <%= f.text_field :name, class: "form-control", required: true %>
    </div>

    <div class="form-group">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, class: "form-control", required: true %>
    </div>

    <div class="form-group">
        <%= f.label :message, "お問い合わせ内容" %>
        <%= f.text_area :message, class: "form-control", rows: 5, required: true %>
    </div>

    <%= f.submit "送信", class: "btn btn-primary mt-2" %>
    <% end %>

    <%= link_to "戻る", root_path, class: "btn btn-secondary mt-2" %>
</div>


